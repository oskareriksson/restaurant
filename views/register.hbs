  <div class="row">
    <div class="divwrapper">
      <div class="col-xs-12 text-center">
        <h1>Hi, welcome to the register page.</h1>
        <p>Please fill in the form below to register a user.</p>
      </div>
      <div class="col-xs-12 text-center">
        <form method="POST" action="/users/register" class="form">
          <div class="form-group">
            <label for="username">Please enter a username.</label>
            <input type="text" name="username" id="username" class="form-control" placeholder="Username">
          </div>
          <div class="form-group">
            <label for="password">Please enter a password.</label>
            <input type="password" name="password" id="password" class="form-control" placeholder="Password">
          </div>
          <button type="submit" class="btn btn-default">Register</button>
        </form>
      </div>
    </div>
  </div>
</div>
<div class="container-fluid">
  <div class="row">
    <div class="col-xs-12">
      <nav class="nav">
        <ul>
          <li><a href="/">Index</a></li>
          <li><a href="/users/register">Register</a></li>
          <li><a href="/overview">Overview</a></li>
        </ul>
      </nav>
    </div>
